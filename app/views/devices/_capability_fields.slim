.nested-fields
  .card.text-white.bg-dark.mb-3
    .card-body
      .card-link
        = link_to_remove_association "Удалить", f
      .field
        = f.hidden_field :id
        .row
          .col-sm-4
            .form-group.row
              = f.label :enabled, 'Активирован?', class: 'col-form-label'
              = f.check_box :enabled
          .col-sm-4
            .form-group.row
              = f.label :retrievable, 'Извлекаемый', class: 'col-form-label'
              = f.check_box :retrievable
          .col-sm-4
            .form-group.row
              = f.label :status, 'Статус', class: 'col-form-label'
              = f.check_box :status
        br
        .form-group.row
          = f.label :state, 'state', class: 'col-sm-4 col-form-label'
          .col-sm-8 = f.text_field :state, class: 'form-control'
        .form-group.row
          = f.label :state_instance, 'state_instance', class: 'col-sm-4 col-form-label'
          .col-sm-8 = f.text_field :state_instance, class: 'form-control'
        .form-group.row
          = f.label :state_value, 'state_value', class: 'col-sm-4 col-form-label'
          .col-sm-8 = f.number_field :state_value, class: 'form-control'
        .form-group.row
          = f.label :capability_type, 'capability_type', class: 'col-sm-4 col-form-label'
          .col-sm-8 = f.select :capability_type, Capability::TYPES, {}, class: 'form-control'
        .form-group.row
          = f.label :path, 'path', class: 'col-sm-4 col-form-label'
          .col-sm-8 = f.text_field :path, class: 'form-control'
        .form-group.row
          = f.label :pin, 'pin', class: 'col-sm-4 col-form-label'
          .col-sm-8 = f.number_field :pin, class: 'form-control'
br